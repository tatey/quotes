<ul class="actions">
  <li>
    <form action="/quote/<%= quote.id %>/votes/<%= Vote::VOTE_TYPES[:up] %>" method="post">
      <fieldset>
        <input type="submit" value="&uarr; Vote up" />
      </fieldset>
    </form>
  </li>
  <li>
    <form action="/quote/<%= quote.id %>/votes/<%= Vote::VOTE_TYPES[:down] %>" method="post">
      <fieldset>
        <input type="submit" value="&darr; Vote down" />
      </fieldset>
    </form>
  </li>
</ul>

<blockquote>
  <p>
    <% quote.lines.each do |line| %>
      <span class="identifier" style="color: <%= line.style %>"><%= line.identifier %></span>
      <span class="text"><%= line.text %></span>
      <br/>
    <% end %>
  </p>
</blockquote>

<ul class="meta">
  <li><a href="/quote/<%= quote.id %>" title="Permalink"><%= quote.number %> submitted <%= render_formated_datetime(quote.created_at) %></a></li>
  <li id="votes_count_<%= quote.id %>"><%= render_votes_count(quote.votes_count) %></li>
</ul>
